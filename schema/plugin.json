{
  "jupyter.lab.shortcuts": [],
  "title": "custom-slideshow",
  "description": "custom-slideshow settings.",
  "type": "object",
  "properties": {
    "dummy": {
      "type": "boolean",
      "title": "Dummy",
      "description": "Placeholder",
      "default": false
    }
  },
  "additionalProperties": false,
  "jupyter.lab.menus": {
    "main": [
      {
        "id": "slideshow-menu",
        "label": "Slideshow",
        "rank": 80,
        "items": [
          {
            "command": "slideshow:start-first"
          },
          {
            "command": "slideshow:start-current"
          },
          {
            "command": "slideshow:exit"
          }
        ]
      }
    ]
  },
  "jupyter.lab.metadataforms": [
    {
      "id": "slideshow-metadata-form:plugin",
      "label": "Slideshow Tools",
      "uiSchema": {
        "ui:order": [
          "/slideshow/transition",
          "/slideshow/slide_dir",
          "/slideshow/transition_duration",
          "/slideshow/hide_code"
        ]
      },
      "metadataSchema": {
        "type": "object",
        "properties": {
          "/slideshow/transition": {
            "title": "Transition Type",
            "type": "string",
            "enum": ["", "slide", "fade", "zoom"],
            "enumNames": ["-", "Slide", "Fade", "Zoom"],
            "default": ""
          },
          "/slideshow/hide_code": {
            "title": "Hide Code Cell",
            "type": "boolean",
            "default": false
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "/slideshow/transition": {
                  "const": "slide"
                }
              }
            },
            "then": {
              "properties": {
                "/slideshow/slide_dir": {
                  "title": "Slide Direction",
                  "type": "string",
                  "enum": ["horizontal", "vertical"],
                  "enumNames": ["Horizontal", "Vertical"]
                }
              }
            }
          },
          {
            "if": {
              "not": {
                "properties": {
                  "/slideshow/transition": {
                    "const": ""
                  }
                }
              }
            },
            "then": {
              "properties": {
                "/slideshow/transition_duration": {
                  "title": "Transition Duration (seconds)",
                  "description": "Default: 1 second",
                  "type": "number",
                  "minimum": 0
                }
              }
            }
          }
        ]
      },
      "metadataOptions": {
        "/slideshow/hide_code": {
          "cellTypes": ["code"]
        }
      }
    }
  ]
}
