{
  "jupyter.lab.shortcuts": [],
  "title": "custom-slideshow",
  "description": "custom-slideshow settings.",
  "type": "object",
  "properties": {},
  "additionalProperties": false,
  "jupyter.lab.menus": {
    "main": [
      {
        "id": "slideshow-menu",
        "label": "Slideshow",
        "rank": 80,
        "items": [
          {
            "command": "slideshow:start-first"
          },
          {
            "command": "slideshow:start-current"
          },
          {
            "command": "slideshow:exit"
          }
        ]
      }
    ]
  },
  "jupyter.lab.metadataforms": [
    {
      "id": "slideshow-metadata-form:plugin",
      "label": "Slideshow Tools",
      "metadataSchema": {
        "type": "object",
        "properties": {
          "/slideshow/transition": {
            "title": "Transition Type",
            "type": "string",
            "enum": [
              "",
              "slide",
              "fade",
              "zoom"
            ],
            "enumNames": [
              "-",
              "Slide",
              "Fade",
              "Zoom"
            ],
            "default": ""
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "/slideshow/transition": {
                  "const": "slide"
                }
              }
            },
            "then": {
              "properties": {
                "/slideshow/slide_dir": {
                  "title": "Slide Direction",
                  "type": "string",
                  "enum": [
                    "horizontal", 
                    "vertical"
                  ],
                  "enumNames": [
                    "Horizontal", 
                    "Vertical"
                  ]
                }
              }
            }
          }
        ]
      }
    }
  ]
}
